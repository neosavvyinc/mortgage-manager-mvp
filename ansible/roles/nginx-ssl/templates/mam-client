server {
    listen 80;
    server_name {{ apiBackendDNSName }};

    access_log /opt/mam-nginx/logs/non-ssl.log;

    location /shoutout/1.0/ {
      proxy_pass        http://localhost:{{ nginxProxyToPort }}/;
    }
}

server {
    listen 443;
    server_name {{ apiBackendDNSName }};

    access_log /opt/mam-nginx/logs/ssl-log.log;

    ssl on;
    ssl_certificate     /opt/mam-nginx/certificates/mam.crt;
    ssl_certificate_key /opt/mam-nginx/certificates/mam.key;

    ssl_session_timeout 5m;

    ssl_protocols SSLv3 TLSv1;
    ssl_ciphers ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
    ssl_prefer_server_ciphers on;

    client_max_body_size 25m;

    location / {
      proxy_pass        http://localhost:{{ nginxProxyToPort }};
      proxy_set_header  X-Real-IP  $remote_addr;
    }
}